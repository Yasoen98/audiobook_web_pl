{
  "info": {
    "name": "Polski Lektor AI",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Rejestracja",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{backend}}/auth/register",
          "host": ["{{backend}}"],
          "path": ["auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"demo@lektor.ai\",\n  \"password\": \"Demo!1234\",\n  \"acceptTerms\": true,\n  \"confirmOwnership\": true,\n  \"noImpersonation\": true\n}"
        }
      }
    },
    {
      "name": "Lista PDF",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{backend}}/pdf",
          "host": ["{{backend}}"],
          "path": ["pdf"]
        }
      }
    }
  ]
}
